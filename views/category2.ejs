<%- include('layouts/header.ejs') %>

<%- include('layouts/navigation.ejs') %>

 <!-- Page Content -->
 <div class="container">    
    <div class="row">
        
        <%- include('layouts/sidebar.ejs')%> 

        <div class="col-lg-9">           
            
        <br><br>
            <div class="row">                

                <% for (let p of products) {   %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="./images/<%= p.img %>"><img class="card-img-top" src="./images/<%= p.img %>" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <br>
                                <a href="/category2/<%= p._id %>"><%= p.title %></a>
                            </h4>
                          
                            <h5>$<%= p.price %></h5>                          



                            <form action="/add-cart" method="POST">
                                <input type="hidden" name="id" value="<%= p._id %>">
                                <input type="hidden" name="catId" value="cat2">
                                <button type ="submit" class="btn btn-info">Add to cart</button>
                                </form>

                        </div>                                     
                    </div>
                </div>

            
                <% } %>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<%- include('layouts/footer.ejs') %>





