                          <p>Quantity: <%= prod.quantity %></p>      
                          <p><%= prod.description %></p>                  
                         

                          <!-- add to cart-->

                        
                         <button type="happy" style="border: 0; background: transparent" class="flex-end">
                            <img src="../images/stillEarth.png" width="50" height="50" alt="earth" id="rotate"/>
                        </button>

                         
                          <form action="/add-cart" method="POST">
                              <input type="hidden" name="id" value="<%= prod._id %>">
                              <input type="hidden" name="catId" value="cat4">
