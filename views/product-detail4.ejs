                              </form>
 
                      </div>   
                      <!-- card body-->
                
                         
                  </div>
                  <!--cardfront h100-->

                  <!--cardback h-100-->
                  <div class="cardback h-100">
                   
                    <a href="../images/<%= prod.img2 %>"><img class="card-img-top" src="../images/<%= prod.img2 %>" alt=""></a>
                     
                       <!--card body-->
                      
                       <div class="card-body-back">
                        <h4 class="card-title">
                          <a href=""><%= prod.recipe %></a>
                      </h4>
                       
                       
                       <a href="<%= prod.url %>">Click to make</a>
                         <br>
                         <br>
                         <br>
                         <br>
                        
                         <br>
                         <br>
                          <button type="happier" style="border: 0; background: transparent">
                            <img src="../images/stillEarth.png" width="50" height="50" alt="earth"id="rerotate" />
                        </button>
                        <p></p>
                          <!-- add to cart-->
                         
                          

                      </div>   
                      <!-- card body-->
                
                         
                  </div>


                  <!--cardback h-100-->

                

              </div>
