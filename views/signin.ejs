<%- include('layouts/header.ejs') %>
<%- include('layouts/navigation.ejs') %>

<br></br>
<div class="container">

    <body class="text-center">
        <form action="/submitSignin" method="POST">
            <img class="mb-4" src="../images/floatingEarth.gif" width="50" height="50">
            <h1 class="h3 mb-3 font-weight-normal">Please Sign in</h1>
            <label for="userEmail" class="sr-only">Email Address</label>
            <input type="email" id="userEmail" class="form-control" placeholder="Email Address" name="userEmail" autofocus>

            <label for="userPassword" class="sr-only">Password</label>
            <input type="password" id="userPassword" class="form-control" placeholder="Password" name="userPassword">

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me">
                    Remember Me
                </label>
            </div>
            <div class="row">
                <p>New User?</p><a href="createUser">create new account</a>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </body>
</div>



